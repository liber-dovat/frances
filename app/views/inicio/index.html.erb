
<div class="container">
   <div class="row clearfix">
      <div class="col-md-12 column">
         <div class="row clearfix header">
            <div class="col-md-12 column">
               Kanji -- Hiragana
            </div>
         </div>
         <div class="row clearfix ventana">

            <div class="col-xs-12 col-md-12 column kanji">
               日本語
            </div>

            <div class="row clearfix">
               <div class="col-xs-12 col-md-12 column">

                  <div class="col-xs-6 col-md-4 column previo pull-left">
                    <ul class="pager">
                        <li><a href="#">Previo</a></li>
                    </ul>
                  </div>
                 
                  <div class="col-xs-6 col-md-4 column pull-right siguiente">
                    <ul class="pager">
                        <li><a href="#">Siguiente</a></li>
                    </ul>
                  </div>
                  
               </div>
            </div>

         </div>

         <div class="row clearfix navbar-fixed-bottom respuesta">
            <div class="row clearfix">
               <div class="col-md-12 column">
                    <%= image_tag("tab.svg", :alt => "svg tab", class: "btn", id: "tab") %>
<!-- onerror="this.onerror=null; this.src='image.png'" -->
<!--                    <div id="label">
                      Texto
                    </div>-->
               </div>
            </div>
            <div class="row clearfix accordion-content">
               <div class="col-md-6 col-md-push-3 column" id="panel">
                  <div>
                     Contenido
                  </div>
               </div>
            </div>
         </div>

      </div>
   </div>
</div>

<script>
   function toggle_visibility(id) {
//       alert("¡Mensaje2! " + id);
//       $(id).stop().animate({height:'toggle'}, 500);
      $(id).animate({height:'toggle'});
   }

   $('#tab').on("click", function() {
      console.log("$('#tab').click");
//       alert("¡Mensaje!");
      toggle_visibility('#panel');
   });

   $(document).ready(function(){
      $('#panel').hide();
   });
</script>